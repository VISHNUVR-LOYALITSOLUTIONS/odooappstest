<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cab_booking_report_wizard_view" model="ir.ui.view">
        <field name="name">Cab Booking Report</field>
        <field name="model">cab.booking.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="car_id"/>
                        <field name="driver_id"/>
                    </group>
                </group>

                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cab_booking_report_menu" model="ir.actions.act_window">
        <field name="name">Cab Booking Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cab.booking.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cab_booking_report_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_cab_booking_report"
        name="Booking Report"
        parent="cabbook_menu"
        action="action_cab_booking_report_menu"
       />

</odoo>
